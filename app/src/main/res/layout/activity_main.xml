<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <!--状态监测栏-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ambient_light" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/light_lux"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scrient_light" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/screen_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_alpha" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/filter_alpha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Switch
                android:id="@+id/filter_switch"
                style="@style/option_title"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/filter_enable"
                android:textColor="?android:attr/colorPrimary" />

            <!--微调栏-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Switch
                        android:id="@+id/auto_adjustment"
                        style="@style/option_title"
                        android:enabled="false"
                        android:text="@string/auto_adjustment" />

                    <TextView
                        style="@style/option_desc"
                        android:text="@string/auto_adjustment_desc" />

                    <TextView
                        style="@style/option_title"
                        android:text="@string/filter_level_offset" />

                    <SeekBar
                        android:id="@+id/filter_level_offset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="1dp"
                        android:max="100"
                        android:min="0"
                        android:progress="50" />

                    <TextView
                        style="@style/option_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_level_offset_desc" />

                    <TextView
                        style="@style/option_title"
                        android:text="@string/filter_dynamic_color" />

                    <SeekBar
                        android:id="@+id/filter_dynamic_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="1dp"
                        android:max="20"
                        android:min="0"
                        android:progress="10" />

                    <TextView
                        style="@style/option_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_dynamic_color_desc" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--特殊选项-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Switch
                        android:visibility="gone"
                        style="@style/option_title"
                        android:enabled="false"
                        android:text="@string/pixel_filter" />

                    <TextView
                        android:visibility="gone"
                        style="@style/option_desc"
                        android:text="@string/pixel_filter_desc" />

                    <Switch
                        android:id="@+id/smooth_adjustment"
                        style="@style/option_title"
                        android:text="@string/smooth_adjustment" />

                    <TextView
                        style="@style/option_desc"
                        android:text="@string/smooth_adjustment_desc" />

                    <Switch
                        android:id="@+id/landscape_optimize"
                        style="@style/option_title"
                        android:text="@string/landscape_optimize" />

                    <TextView
                        style="@style/option_desc"
                        android:text="@string/landscape_optimize_desc" />

                    <Switch
                        android:id="@+id/hide_in_recent"
                        style="@style/option_title"
                        android:text="@string/hide_in_recent" />

                    <TextView
                        style="@style/option_desc"
                        android:text="@string/hide_in_recent_desc" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--声明-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/option_title"
                        android:text="@string/statement" />

                    <TextView
                        style="@style/option_desc"
                        android:text="@string/statement_content" />

                    <TextView
                        style="@style/option_desc"
                        android:autoLink="all"
                        android:gravity="end"
                        android:text="@string/author" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>