<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:switchStyle">@style/SceneSwitch</item>
        <item name="android:seekBarStyle">@style/SceneSeekBar</item>
        <item name="android:checkboxStyle">@style/SceneCheckBox</item>
        <item name="android:radioButtonStyle">@style/SceneRadioBox</item>
        <item name="seekBarStyle">@style/SceneSeekBar</item>
    </style>

    <style name="AppThemeOFF" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:switchStyle">@style/SceneSwitch</item>
        <item name="android:seekBarStyle">@style/SceneSeekBar</item>
        <item name="android:checkboxStyle">@style/SceneCheckBox</item>
        <item name="android:radioButtonStyle">@style/SceneRadioBox</item>
        <item name="seekBarStyle">@style/SceneSeekBar</item>
    </style>

    <style name="AppTheme.Default" parent="AppTheme">>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.OFF" parent="AppThemeOFF">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="option_title" parent="textTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="option_desc" parent="textSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="btn_color_picker">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="textTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="textSmallTitle" parent="textTitle">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="textDefault">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="textSmall">
        <item name="android:textColor">#888888</item>
        <item name="alpha">0.8</item>
        <item name="android:textSize">11dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SceneSpinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SceneSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:textAppearance">@style/textTitle</item>
        <item name="android:textOn" />
        <item name="android:textOff" />
        <item name="android:showText">false</item>
    </style>

    <style name="SceneCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="SceneRadioBox" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:button">@drawable/radio_style</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="SceneSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumbOffset">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:splitTrack">false</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">?android:colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbTint">?android:colorAccent</item>
        <item name="android:alpha">0.45</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SceneButton" parent="Widget.AppCompat.ButtonBar">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="dialogAnim">
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    </style>
</resources>
